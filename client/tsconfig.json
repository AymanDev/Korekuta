{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
